<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.sotti.okhttpvolleygson">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:fullBackupContent="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name="com.sotti.okhttpvolleygson.App"
    android:theme="@style/AppTheme">

    <activity
      android:label="@string/app_name"
      android:name="com.sotti.okhttpvolleygson.ui.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:label="@string/activity_title_JSON_object"
      android:name="com.sotti.okhttpvolleygson.ui.JsonObjectActivity"
      android:parentActivityName="com.sotti.okhttpvolleygson.ui.MainActivity"/>

    <activity
      android:label="@string/activity_title_JSON_array"
      android:name="com.sotti.okhttpvolleygson.ui.JsonArrayActivity"
      android:parentActivityName="com.sotti.okhttpvolleygson.ui.MainActivity"/>

    <activity
      android:label="@string/activity_title_network_image_view"
      android:name="com.sotti.okhttpvolleygson.ui.NetworkImageViewActivity"
      android:parentActivityName="com.sotti.okhttpvolleygson.ui.MainActivity"/>

    <activity
      android:label="@string/activity_title_image_request"
      android:name="com.sotti.okhttpvolleygson.ui.ImageRequestActivity"
      android:parentActivityName="com.sotti.okhttpvolleygson.ui.MainActivity"/>

  </application>

</manifest>
